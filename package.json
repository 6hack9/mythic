{
  "name": "abc",
  "version": "1.0.0",
  "description": "A starter theme for WordPress.",
  "main": "index.js",
  "scripts": {
    "build:styles": "npm run styles:scss && npm run styles:autoprefixer",
    "build:scripts": "npm run scripts:uglify",
    "styles:scss": "node-sass --output-style compressed -o resources/styles public/styles",
    "styles:autoprefixer": "postcss -u autoprefixer -r resources/styles/*",
    "scripts:uglify": "make-dir public/scripts && uglifyjs resources/scripts/*.js -m -o public/scripts/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintadlock/abc.git"
  },
  "author": "Justin Tadlock",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/justintadlock/abc/issues"
  },
  "homepage": "https://github.com/justintadlock/abc#readme",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "make-dir-cli": "^1.0.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "uglify-js": "^3.3.13"
  }
}
